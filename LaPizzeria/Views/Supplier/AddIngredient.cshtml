@model LaPizzeria.Models.DTO.IngredientDTO

@{
    ViewData["Title"] = "Add Ingredient";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Add Ingredient</h1>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Ingredient Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="AddIngredient">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="IngredientName" class="form-label">Ingredient Name</label>
                    <input asp-for="IngredientName" class="form-control" placeholder="Enter ingredient name" />
                    <span asp-validation-for="IngredientName" class="text-danger"></span>
                </div>

                <div class="form-group text-right mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
