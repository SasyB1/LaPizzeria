@model List<LaPizzeria.Models.DTO.OrderDTO>

@{
    ViewData["Title"] = "All Orders";
    var currentDate = ViewBag.SelectedDate ?? DateTime.Today.ToString("dd-MM-yyyyy");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>All Orders</h1>
    <div class="text-center">
        <p><strong>@currentDate</strong></p>
        <p><strong>Total Paid Orders : </strong>@ViewBag.TotalPaidOrders</p>
        <p><strong>Total Income : </strong>@ViewBag.TotalIncome €</p>
    </div>
</div>

<div class="mb-3">
    <form asp-action="AllOrders" method="get">
        <div class="input-group">
            <input type="date" name="date" class="form-control" value="@currentDate" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-secondary">Filter by Date</button>
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Address</th>
            <th>User</th>
            <th>Note</th>
            <th>Date and Time</th>
            <th>Order Items</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr id="order-@order.OrderId">
                <td>@order.OrderId</td>
                <td>@order.Address</td>
                <td>@order.User.Username</td>
                <td>@order.Note</td>
                <td>@order.DateTime.ToString("g")</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderItems)
                        {
                            <li>@item.ProductName - @item.Quantity</li>
                        }
                    </ul>
                </td>
                <td class="status">@(order.isPaid ? "Paid" : "Pending")</td>
                <td>
                    @if (!order.isPaid)
                    {
                        <button class="btn btn-success mark-as-paid" data-order-id="@order.OrderId">Mark as Paid</button>
                    }
                    else
                    {
                        <button class="btn btn-info" disabled>Paid</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.mark-as-paid').click(function () {
                var button = $(this);
                var orderId = button.data('order-id');

                $.ajax({
                    url: '@Url.Action("MarkOrderIsPaid", "Supplier")',
                    type: 'POST',
                    data: { orderId: orderId },
                    success: function (response) {
                        if (response.success) {
                            var row = $('#order-' + orderId);
                            row.find('.status').text('Paid');
                            button.removeClass('btn-success').addClass('btn-info').text('Paid').prop('disabled', true);
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', status, error);
                        alert('An error occurred while updating the order status.');
                    }
                });
            });
        });
    </script>
}
