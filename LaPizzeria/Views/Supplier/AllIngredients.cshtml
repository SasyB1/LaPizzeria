@model IEnumerable<LaPizzeria.Models.Ingredient>

@{
    ViewData["Title"] = "AllIngredients";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">All Ingredients</h1>

    <div class="mb-3 text-right">
        <a asp-action="AddIngredient" class="btn btn-success">Aggiungi un nuovo ingrediente</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.IngredientId)</th>
                        <th>@Html.DisplayNameFor(model => model.IngredientName)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IngredientId)</td>
                            <td>@Html.DisplayFor(modelItem => item.IngredientName)</td>
                            <td class="text-right">
                                <a asp-action="UpdateIngredient" asp-route-id="@item.IngredientId" class="btn btn-primary btn-sm">Update</a>
                                <form asp-action="DeleteIngredient" asp-route-id="@item.IngredientId" method="post" class="d-inline" onsubmit="confirmDelete(event);">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function confirmDelete(event) {
            if (!confirm('Sei sicuro di voler eliminare questo ingrediente?')) {
                event.preventDefault();
            }
        }
    </script>
}
