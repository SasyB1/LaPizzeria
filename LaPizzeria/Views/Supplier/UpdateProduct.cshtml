@model LaPizzeria.Models.Product

@{
    ViewData["Title"] = "UpdateProduct";
}

<h1>UpdateProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ProductId" />
            <span asp-validation-for="ProductId" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input type="file" asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" value="@Model.ProductPrice.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDeliveryTime" class="control-label"></label>
                <input asp-for="ProductDeliveryTime" class="form-control" />
                <span asp-validation-for="ProductDeliveryTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ingredienti</label>
                @foreach (var ingredient in ViewBag.Ingredients)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedIngredients" value="@ingredient.IngredientId"
                               class="form-check-input"
                        @(Model.Ingredients.Any(i => i.IngredientId == ingredient.IngredientId) ? "checked" : "") />
                        <label class="form-check-label">@ingredient.IngredientName</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="AllProducts" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllProducts">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
