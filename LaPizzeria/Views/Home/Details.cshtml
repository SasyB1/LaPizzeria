@model LaPizzeria.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDeliveryTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDeliveryTime)
        </dd>
        <dt class="col-sm-2">
            Immagine del Prodotto
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProductImage != null && Model.ProductImage.Length > 0)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.ProductImage)" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
            }
            else
            {
                <p>Immagine non disponibile</p>
            }
        </dd>
    </dl>
</div>
<div>   
    <a asp-action="Index">Back to List</a>
</div>
