@model LaPizzeria.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Product Details</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Product Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.ProductDeliveryTime)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ProductDeliveryTime)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Immagine del Prodotto
                </dt>
                <dd class="col-sm-9">
                    @if (Model.ProductImage != null && Model.ProductImage.Length > 0)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(Model.ProductImage)" alt="Product Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                    }
                    else
                    {
                        <p class="text-muted">Immagine non disponibile</p>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Catalogo" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>
